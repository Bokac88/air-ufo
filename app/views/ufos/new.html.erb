<div class="container">
  <h1>Add UFO</h1>
  <%= simple_form_for @ufo do |f| %>
    <div class="form-inputs">
      <%= f.input :brand, input_html: { autocomplete: 'off', autofocus: true } %>
      <%= f.input :speed %>
      <%= f.input :age %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
  
    <div class="form-actions">
      <%= f.submit class: 'btn btn-lg btn-primary' %> <span class="button-divider">|</span>
      <%= link_to 'Cancel', ufos_path, class: 'btn btn-lg btn-outline-secondary' %>
    </div>
  <% end %>
</div>
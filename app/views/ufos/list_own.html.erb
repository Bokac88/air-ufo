<div class="container-list-own container">
  <% if @ufos.empty? %>
    <div>
      <h1>You don't own any UFOS</h1>
      <%= link_to "Share your first UFO", new_ufo_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% else %>
    <h1 class="text-center">MY UFOS</h1>
    <div class="row">
      <% @ufos.each do |ufo| %>
        <div class="col-xs-12 col-sm-6 col-lg-3">
          <div class="link">
          <%= link_to ufo_path(ufo.id), class: "link" do %>
          </div>
          <div class="card">
            <%= image_tag ufo.photo, alt: "ufo-image", class: "card-img-top" %>
            <div class="card-body">
              <p class="spaceship_name"><%= ufo.brand %></p>
              <p class="features"><strong>Main Features: </strong><%= ufo.description %></p>
              <p class="price"><strong>Price: </strong><%= ufo.price %> Space$</p>
              <% if ufo.availability %>
              <p class="card-text">Available</p>
            <% else %>
              <p class="card-text">Rented</p>
            <% end %>
            </div>
          </div>
        <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

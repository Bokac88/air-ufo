<div class="container">
  <% if @rentals.empty? %>
    <div class="container-list-own">
      <h1>You have no rented UFOS :(</h1>
      <%= link_to "Rent your first UFO", root_path, class: "btn btn-primary btn-lg" %>
    </div>
  <% else %>
    <h1 class="text-center my-4">YOUR RENTALS</h1>
    <div class="row">
      <% @rentals.each do |rental| %>
      <div class="col-xs-12 col-sm-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <p class="card-text"><strong>Rental:</strong> <%= rental.ufo.brand %></p>
            <p class="card-text"><strong>Start date:</strong> <%= rental.start_date %></p>
            <p class="card-text"><strong>End date:</strong> <%= rental.end_date %></p>
            <% unless rental.review.present? %>
              <%= link_to 'Leave a review', new_rental_review_path(rental.id), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

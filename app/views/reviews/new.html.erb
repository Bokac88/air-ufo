<div class="container">
  <div class="row">
    <div class="col-lg-4 offset-lg-4">
      <h1>LEAVE A REVIEW</h1>
      <%= simple_form_for [@rental, @review] do |f| %>
        <div class="form-inputs">
          <%= f.input :content, input_html: { autocomplete: 'off', autofocus: true } %>
          <%= f.input :rating %>
        </div>

        <div class="form-actions">
          <%= f.submit class: 'btn btn-lg btn-primary' %> <span class="button-divider">|</span>
          <%= link_to 'Cancel', rentals_path, class: 'btn btn-lg btn-outline-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
